{% block topi_product_rental_summary_label %}
    {% set topiPriceGross = topiPrice.gross|number_format * 1000 %}
    {% set topiPriceNet = topiPrice.gross|number_format * 1000 %}
    {% set topiTax = taxRate * 100 %}
    {% set topiCurrencyIso = context.currency.isoCode %}

    {% block topi_product_rental_summary_label_script %}
        <script>
            window.addEventListener("load", (event) => {
                topi.pdpItem = {
                    price: {
                        currency: "{{ topiCurrencyIso }}",
                        gross: {{ topiPriceGross }},
                        net: {{ topiPriceNet }},
                        taxRate: {{ topiTax }},
                    },
                    quantity: {{ topiQuantity }},
                    sellerProductReference: {
                        reference: "{{ topiProductId }}",
                        source: "shopware-ids",
                    },
                };
            });
        </script>
    {% endblock %}

    {% block topi_product_rental_summary_label_widget %}
        <x-topi-product-rental-summary-label />
    {% endblock %}
{% endblock %}